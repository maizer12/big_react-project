{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": { "*": ["./src/*"] },
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "declarations.d.ts"],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
